a.sidebar-link {
  position: relative;

  &.active:before,
  &:hover:before {
    content: "";
    right: 0;
    top: -12px;
    position: absolute;
    z-index: 100;
    height: 36px;
    width: 36px;
    transition: transform .2s ease;
    background-image: url(/pages/medical_frontend_project/frontend-docs-online/pupu.gif);
    background-position: center;
    background-repeat: round;
    background-color: transparent;
  }

  &.active:hover:before {
    background-image: url(/pages/medical_frontend_project/frontend-docs-online/pupu.gif);
    transform: scale(1.2);
  }
}

.custom-block {
  &.tip {
    border-color: #f57383;
  }
}
